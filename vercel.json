{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/contact",
            "dest": "/server.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/api/health",
            "dest": "/server.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/static/images/$1"
        },
        {
            "src": "/(.*\\.css|.*\\.js)",
            "dest": "/static/$1"
        },
        {
            "src": "/(planets|galaxies|contact)\\.html",
            "dest": "/static/$1.html"
        },
        {
            "src": "/",
            "dest": "/static/index.html"
        }
    ]
}